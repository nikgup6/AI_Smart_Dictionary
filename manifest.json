{
  "manifest_version": 3,
  "name": "Smart Dictionary",
  "version": "1.0",
  "description": "Get context-aware definitions and translations.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}